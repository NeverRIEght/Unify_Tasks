<Page x:Class="Unify_Tasks.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Unify_Tasks.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      FontFamily="/Fonts/#Gilroy">

    <Grid x:Name="layoutGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Grid
            x:Name="sidepanelGrid"
            Grid.Column="0"
            Background="#2f3136">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="0.0825*"/>
                <RowDefinition Height="0.075*"/>
                <RowDefinition Height="0.0475*"/>
                <RowDefinition Height="0.7525*"/>
                <RowDefinition Height="0.0425*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.125*"/>
                <ColumnDefinition Width="0.06*"/>
                <ColumnDefinition Width="0.73*"/>
                <ColumnDefinition Width="0.06*"/>
                <ColumnDefinition Width="0.125*"/>
            </Grid.ColumnDefinitions>

            <Border
                x:Name="profileCard"
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Height="46px"
                Width="200px"
                Background="#3a3e44"
                CornerRadius="10">
                
                <!--Card here-->
                
            </Border>
            <!--User Card-->

            <Border
                x:Name="NewProject"
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Width="170px"
                Height="46px"
                Background="#3a3e44"
                CornerRadius="10">

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="New Project"
                    FontWeight="Medium"
                    Foreground="White"
                    FontSize="24px">
                </TextBlock>

            </Border>
            <!--New Project Border-->

            <Button
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Width="170px"
                Height="46px"
                Opacity="0"
                Click="NewProject_Click">
                
            </Button>
            <!--New Project Button-->
            
            <TextBlock
                Grid.Column="2"
                Grid.Row="2"
                FontSize="12pt"
                FontWeight="Light"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="White"
                >Recent
            </TextBlock>
            <!-- Recent -->
            
            <Border
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Background="#3a3e44"
                CornerRadius="10">
                
                <ScrollViewer
                    VerticalScrollBarVisibility="Visible">

                    <StackPanel x:Name="stackProjects" />
                    
                </ScrollViewer>
                
            </Border>
            <!--Projects List-->
            
        </Grid>
        <Grid
            x:Name="mainpanelGrid"
            Grid.Column="1"
            Background="#3a3e44">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="0.0825*"/>
                <RowDefinition Height="0.075*"/>
                <RowDefinition Height="0.0475*"/>
                <RowDefinition Height="0.7525*"/>
                <RowDefinition Height="0.0425*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.04*"/>
                <ColumnDefinition Width="0.015*"/>
                <ColumnDefinition Width="0.89*"/>
                <ColumnDefinition Width="0.015*"/>
                <ColumnDefinition Width="0.04*"/>
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Width="922px"
                Height="60px"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                FontWeight="Medium"
                FontSize="50px"
                Text="Name your project"
                MaxLength="30">
            </TextBox>

            <Border
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Background="#2f3136"
                CornerRadius="10">

                <ScrollViewer
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="3">
                    
                    <StackPanel x:Name="TasksList" />
                
                </ScrollViewer>

            </Border>
            <!--Task List Border-->
            
        </Grid>
    </Grid>
</Page>
