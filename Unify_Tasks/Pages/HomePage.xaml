<Page x:Class="Unify_Tasks.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Unify_Tasks.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      FontFamily="/Fonts/#Gilroy"
      Loaded="Page_Loaded">

    <Grid x:Name="layoutGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Grid
            x:Name="sidepanelGrid"
            Grid.Column="0"
            Background="#2f3136">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="0.025*"/>
                <RowDefinition Height="0.0575*"/>
                <RowDefinition Height="0.01875*"/>
                <RowDefinition Height="0.0575*"/>
                <RowDefinition Height="0.0475*"/>
                <RowDefinition Height="0.75*"/>
                <RowDefinition Height="0.04375*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.08*" />
                <ColumnDefinition Width="0.06*" />
                <ColumnDefinition Width="0.72*" />
                <ColumnDefinition Width="0.06*" />
                <ColumnDefinition Width="0.08*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#3a3e44"
                CornerRadius="10">

                <Grid
                    x:Name="CardGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.025*" />
                        <ColumnDefinition Width="0.16*" />
                        <ColumnDefinition Width="0.615*" />
                        <ColumnDefinition Width="0.1*" />
                        <ColumnDefinition Width="0.04*" />
                        <ColumnDefinition Width="0.1*" />
                        <ColumnDefinition Width="0.04*" />
                    </Grid.ColumnDefinitions>

                    <Rectangle
                        x:Name="AvatarRect"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MinWidth="30"
                        MinHeight="30"
                        Fill="{DynamicResource CustomPurple}"
                        RadiusX="10"
                        RadiusY="10">
                    </Rectangle>

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        x:Name="AvatarLetter"
                        Foreground="White"
                        FontSize="18px"
                        FontWeight="Medium"
                        FontStyle="Italic"
                        >A
                    </TextBlock>

                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10, 0, 10, 0"
                        x:Name="UserName"
                        Foreground="White"
                        FontSize="14px"
                        FontWeight="Medium"
                        >Admin
                    </TextBlock>

                    <Image
                        Grid.Column="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Source="/Images/Settings.png"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        MouseUp="Settings_MouseUp">
                    </Image>

                    <Image
                        Grid.Column="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/Images/Exit.png"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        MouseUp="LogOf_MouseUp">
                    </Image>

                </Grid>

            </Border>
            <!--User Card-->

            <Border
                x:Name="NewProject"
                Grid.Row="3"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                MinWidth="190px"
                Background="#3a3e44"
                CornerRadius="10">

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="New Project"
                    FontWeight="Medium"
                    Foreground="White"
                    FontSize="24px">
                </TextBlock>

            </Border>
            <!--New Project Border-->

            <Button
                Grid.Row="3"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Opacity="0"
                Click="NewProject_Click">
                
            </Button>
            <!--New Project Button-->
            
            <TextBlock
                Grid.Row="4"
                Grid.Column="2"
                FontSize="12pt"
                FontWeight="Light"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="White"
                >Recent
            </TextBlock>
            <!-- Recent -->
            
            <Border
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Background="#3a3e44"
                CornerRadius="10">
                
                <ScrollViewer
                    VerticalScrollBarVisibility="Visible">

                    <StackPanel x:Name="stackProjects" />
                    
                </ScrollViewer>
                
            </Border>
            <!--Projects List-->
            
        </Grid>
        <Grid
            x:Name="mainpanelGrid"
            Grid.Column="1"
            Background="#3a3e44">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="0.0825*"/>
                <RowDefinition Height="0.075*"/>
                <RowDefinition Height="0.0475*"/>
                <RowDefinition Height="0.7525*"/>
                <RowDefinition Height="0.0425*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.04*"/>
                <ColumnDefinition Width="0.015*"/>
                <ColumnDefinition Width="0.89*"/>
                <ColumnDefinition Width="0.015*"/>
                <ColumnDefinition Width="0.04*"/>
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="922px"
                Height="60px"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                FontWeight="Medium"
                FontSize="50px"
                Text="Name your project"
                MaxLength="30">
            </TextBox>

            <Border
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Background="#2f3136"
                CornerRadius="10">

                <ScrollViewer
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="3">
                    
                    <StackPanel x:Name="TasksList" />
                
                </ScrollViewer>

            </Border>
            <!--Task List Border-->
            
        </Grid>
    </Grid>
</Page>
