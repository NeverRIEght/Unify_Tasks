<UserControl x:Name="TagListElement"
             x:Class="Unify_Tasks.UserControls.TagElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unify_Tasks.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30"
             d:DesignWidth="80">
    <Grid MinHeight="30px" MinWidth="80px">
        <Border
            x:Name="TagBackgroud"
            BorderBrush="White"
            BorderThickness="1px"
            CornerRadius="6"
            RenderOptions.BitmapScalingMode="HighQuality">
            
            <TextBlock
                Text="{Binding TagText, ElementName=TagListElement}"
                FontSize="18px"
                FontWeight="Medium"
                FontFamily="/Fonts/#Gilroy"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality">
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
