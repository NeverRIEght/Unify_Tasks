<UserControl x:Class="Unify_Tasks.UserControls.TaskListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unify_Tasks.UserControls"
             mc:Ignorable="d" 
             x:Name="Task"
             d:DesignHeight="70"
             d:DesignWidth="1000"
             Loaded="Task_Loaded"
             SizeChanged="Task_SizeChanged"
             MouseEnter="Task_MouseEnter"
             MouseLeave="Task_MouseLeave">
    <Grid
        x:Name="TaskGrid"
        MinHeight="70px"
        MouseEnter="Task_MouseEnter"
        MouseLeave="Task_MouseLeave">

        <Grid.RowDefinitions>
            <RowDefinition Height="20px" MinHeight="20px"/>
            <RowDefinition Height="30px" MinHeight="30px"/>
            <RowDefinition Height="20px" MinHeight="20px"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15px" MinWidth="15px"/>
            <ColumnDefinition Width="600px" MinWidth="600px"/>
            <ColumnDefinition Width="175px" />
            <ColumnDefinition Width="210px" />
        </Grid.ColumnDefinitions>
        
        <Border
            Grid.RowSpan="20"
            Grid.ColumnSpan="20"
            CornerRadius="10"
            Background="{DynamicResource MediumI}">
        </Border>

        <TextBox
            x:Name="TaskHeader"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0, 0, 15, 0"
            TextChanged="TaskHeader_TextChanged">
            
        </TextBox>

        <WrapPanel
            x:Name="TagsList">
        </WrapPanel>
        
        <Grid
            Grid.Row="1"
            Grid.Column="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15px" />
                <ColumnDefinition Width="90px" MinWidth="30px"/>
                <ColumnDefinition Width="15px" />
                <ColumnDefinition Width="30px" MinWidth="30px"/>
                <ColumnDefinition Width="15px" />
                <ColumnDefinition Width="30px" MinWidth="30px"/>
                <ColumnDefinition Width="15px" />
            </Grid.ColumnDefinitions>

            <ComboBox
                Grid.Column="1"
                Name="Status"
                Background="Black"
                BorderThickness="5">

                <ComboBoxItem IsSelected="True">
                    <TextBlock>
                            Main font
                    </TextBlock>
                </ComboBoxItem>

            </ComboBox>

            <Image
                x:Name="OpenNote"
                Grid.Column="3"
                Source="/Images/OpenNote.png"
                Visibility="Hidden">
            </Image>

            <Image
                x:Name="OpenNoteWhite"
                Grid.Column="3"
                Source="/Images/OpenNoteWhite.png"
                Visibility="Hidden">
            </Image>

            <Image
                x:Name="Trash"
                Grid.Column="5"
                Source="/Images/Trashcan.png"
                MouseEnter="Trash_MouseEnter"
                MouseLeave="Trash_MouseLeave">
            </Image>

            <Image
                x:Name="TrashRed"
                Grid.Column="5"
                Source="/Images/TrashcanRed.png"
                MouseEnter="Trash_MouseEnter"
                MouseLeave="Trash_MouseLeave"
                Visibility="Hidden">
            </Image>

        </Grid>
        
    </Grid>
</UserControl>
