<UserControl x:Class="Unify_Tasks.UserControls.TaskListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unify_Tasks.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70"
             d:DesignWidth="1000">
    <Grid
        MinHeight="70px">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.285*"/>
            <RowDefinition Height="0.42*"/>
            <RowDefinition Height="0.285*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.02*" />
            <ColumnDefinition Width="0.032*" />
            <ColumnDefinition Width="0.531*" />
            <ColumnDefinition Width="0.095*" />
            <ColumnDefinition Width="0.02*" />
            <ColumnDefinition Width="0.085*" />
            <ColumnDefinition Width="0.006*" />
            <ColumnDefinition Width="0.085*" />
            <ColumnDefinition Width="0.006*" />
            <ColumnDefinition Width="0.03*" />
            <ColumnDefinition Width="0.01*" />
            <ColumnDefinition Width="0.03*" />
            <ColumnDefinition Width="0.01*" />
            <ColumnDefinition Width="0.03*" />
            <ColumnDefinition Width="0.01*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="20"
            CornerRadius="10"
            Background="#3d4046">
            
        </Border>
        
        <CheckBox
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#646a75">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Foreground="White"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Margin="10, 0, 10, 0"
            Background="Transparent"
            BorderThickness="0"
            FontWeight="Medium"
            FontSize="21"
            MaxLength="45"
            Text="Textnsjnvjndsnvnsdnvnsdnnvsknjisvsidnvinsinvns">
        </TextBox>

        <Image
            Grid.Row="1"
            Grid.Column="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Source="/Images/OpenNote.png"
            RenderOptions.BitmapScalingMode="HighQuality">
        </Image>
        
        <Image
            x:Name="TagControl"
            Grid.Row="1"
            Grid.Column="9"
            Source="/Images/TagControl.png"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            RenderOptions.BitmapScalingMode="HighQuality"
            MouseEnter="TagControl_MouseEnter"
            MouseLeave="TagControl_MouseLeave">
        </Image>

        <Image
            x:Name="TagControlBrown"
            Grid.Row="1"
            Grid.Column="9"
            Source="/Images/TagControlBrown.png"
            Opacity="0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            RenderOptions.BitmapScalingMode="HighQuality"
            MouseEnter="TagControl_MouseEnter"
            MouseLeave="TagControl_MouseLeave"
            MouseUp="TagControlBrown_MouseUp">
        </Image>

        <Image
            x:Name="Watch"
            Grid.Row="1"
            Grid.Column="11"
            Source="/Images/Watch.png"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            RenderOptions.BitmapScalingMode="HighQuality"
            MouseEnter="Watch_MouseEnter"
            MouseLeave="Watch_MouseLeave">
        </Image>

        <Image
            x:Name="WatchBlue"
            Grid.Row="1"
            Grid.Column="11"
            Opacity="0"
            Source="/Images/WatchBlue.png"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            RenderOptions.BitmapScalingMode="HighQuality"
            MouseEnter="Watch_MouseEnter"
            MouseLeave="Watch_MouseLeave"
            MouseUp="WatchBlue_MouseUp">
        </Image>

        <Image
            x:Name="Trash"
            Grid.Row="1"
            Grid.Column="13"
            Source="/Images/Trashcan.png"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            RenderOptions.BitmapScalingMode="HighQuality"
            MouseEnter="Trash_MouseEnter"
            MouseLeave="Trash_MouseLeave">
        </Image>

        <Image
            x:Name="TrashRed"
            Opacity="0"
            Grid.Row="1"
            Grid.Column="13"
            Source="/Images/TrashcanRed.png"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            RenderOptions.BitmapScalingMode="HighQuality"
            MouseEnter="Trash_MouseEnter"
            MouseLeave="Trash_MouseLeave"
            MouseUp="TrashRed_MouseUp">
        </Image>
    </Grid>
</UserControl>
